<script>
function loadUser(){
  const uname = localStorage.getItem("APP_USER") || "Guest";
  const bal = Number(localStorage.getItem("APP_BALANCE") || 0);

  document.getElementById("userName").innerText = uname;
  document.getElementById("walletBtn").innerText = "₹" + bal;
}
loadUser();

// LOAD HISTORY
function loadHistory(){
    let list = JSON.parse(localStorage.getItem("BET_HISTORY") || "[]");
    const box = document.getElementById("historyBox");

    if(list.length === 0){
        box.innerHTML = `<p class="empty">No bets placed yet.</p>`;
        return;
    }

    // Latest first
    list.reverse();

    list.forEach(b=>{
        let div = document.createElement("div");
        div.className = "item";

        div.innerHTML = `
            <div class="item-title">Bet: ₹${b.amount}</div>
            <div class="item-team">${b.team}</div>
            <div class="item-time">${b.time}</div>
        `;
        box.appendChild(div);
    });
}

loadHistory();

// CLEAR HISTORY
function clearHistory(){
    if(confirm("Delete all bet records?")){
        localStorage.removeItem("BET_HISTORY");
        location.reload();
    }
}
</script>

